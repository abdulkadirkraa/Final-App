<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rgb"
    android:background="#00bcd4"
    android:id="@+id/framergbforcolor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <SeekBar
            android:id="@+id/seekred"
            style="@android:style/Widget.DeviceDefault.Light.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:max="255"
            android:progress="0"
            android:progressDrawable="@android:drawable/ic_media_play"
            android:thumb="@android:drawable/btn_default_small"
            android:thumbTint="#FF0000" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Green"
            android:textStyle="bold"
            android:textColor="#00FF00"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <SeekBar
            android:id="@+id/seekgreen"
            style="@android:style/Widget.DeviceDefault.Light.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:max="255"
            android:progress="132"
            android:progressDrawable="@android:drawable/ic_media_play"
            android:thumb="@android:drawable/btn_default_small"
            android:thumbTint="#00FF00" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textStyle="bold"
            android:textColor="#0000FF"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>
        <SeekBar
            android:id="@+id/seekblue"
            style="@android:style/Widget.DeviceDefault.Light.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:max="255"
            android:progress="52"
            android:progressDrawable="@android:drawable/ic_media_play"
            android:thumb="@android:drawable/btn_default_small"
            android:thumbTint="#0000FF" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#00bcd4"
            android:textColor="@color/black"
            android:textSize="50sp"
            android:gravity="center"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</FrameLayout>